<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/irongrip"
    tools:context=".Screen1_UserLogin">

    <view
        android:layout_width="wrap_content"
        class ="com.facebook.login.widget.LoginButton"
        android:layout_height="wrap_content"
        android:id="@+id/facebookHidden"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/com_facebook_button_background"
        android:visibility="gone"
        />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.google.android.gms.common.SignInButton"
        android:id="@+id/googleHidden"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/facebookButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:id="@+id/facebookButton"
        android:background="@drawable/facebook_sign_in"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:id="@+id/googleButton"
        android:layout_below="@+id/facebookButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/google_sign_in"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/app_icon"
        android:layout_below="@+id/facebookHidden"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/headphone_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:id="@+id/app_name"
        android:textSize="40sp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/app_icon"/>

</RelativeLayout>